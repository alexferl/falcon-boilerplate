{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/user.schema.json",
  "description": "A user account.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "pattern": "[0-9a-v]+$",
      "minLength": 20,
      "maxLength": 20,
      "description": "Unique identifier for this user.",
      "readOnly": true
    },
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "format": "email",
      "description": "The email of the user."
    },
    "first_name": {
      "$id": "#/properties/first_name",
      "type": "string",
      "description": "The first name of the user."
    },
    "last_name": {
      "$id": "#/properties/last_name",
      "type": "string",
      "description": "The last name of the user."
    },
    "created_at": {
      "$id": "#/properties/created_at",
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 format when the user was created.",
      "readOnly": true
    },
    "deleted_at": {
      "$id": "#/properties/deleted_at",
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 format when the user was deleted.",
      "readOnly": true
    },
    "updated_at": {
      "$id": "#/properties/updated_at",
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 format when the user was last updated.",
      "readOnly": true
    }
  }
}
